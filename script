let array = [];
let form1;
y.onclick = function addData() {
  var firstName = document.getElementById("firstName").value;
  var lastName = document.getElementById("lastName").value;
  var pnum = document.getElementById("phnum").value;
  var dob = document.getElementById("dob").value;
  var givenDate = new Date(dob);
  var today = new Date();
  

  if (firstName == '') {
    alert("First Name is Required");
    return;
  }
  if (firstName.length < 3) {
    alert("Invalid First Name");
    return;
  }
  if (lastName == '') {
    alert("Last Name Required");
    return;
  }
  if (lastName.length < 3) {
    alert("Invalid Last Name");
    return;
  }
  if (pnum == '') {
    alert("Mobile Number is Required");
    return;
  }
  if (pnum.length != 10) {
    alert("Invalid Mobile Number");
    return;
  }
  if (dob == '') {
    alert("Date of Birth is Required");
    return;
  }
  if (givenDate > today) {
    alert("Invalid Date of Birth");
    return;
  }
  if (givenDate.getDate() == today.getDate() &&
    givenDate.getMonth() == today.getMonth() &&
    givenDate.getFullYear() == today.getFullYear()) {

    alert("Invalid Date of Birth");
    return;
  }

  if (firstName != '' &&
    lastName != '' &&
    pnum != '' &&
    dob != '' &&
    firstName.length > 3 &&
    lastName.length > 3 &&
    pnum.length == 10 &&
    givenDate < today &&
    givenDate.getDate() != today.getDate() ||
    givenDate.getMonth() != today.getMonth() ||
    givenDate.getFullYear() != today.getFullYear()) {

    form1 = {

      First_Name: firstName,
      Last_Name: lastName,
      Mobile_Number: pnum,
      Age: ageFunction(dob)

    };

    array.push(form1);
    console.log('Add data');
    alert("Values Inserted");
    document.getElementById("x").reset();
    console.log(array);
    return AddRow();
    }
    }
    var list1 = [];
    var list2 = [];
    var list3 = [];
    var list4 = [];
    
    var n = 1;
    var x = 0;
    
    function AddRow(){
    
    var AddRown = document.getElementById('formData');
    var NewRow = AddRown.insertRow(n);
    
    list1[x] = form1.First_Name;
    list2[x] = form1.Last_Name;
    list3[x] = form1.Mobile_Number;
    list4[x] = form1.Age;
    
    var cel1 = NewRow.insertCell(0);
    var cel2 = NewRow.insertCell(1);
    var cel3 = NewRow.insertCell(2);
    var cel4 = NewRow.insertCell(3);
    
    cel1.innerHTML = list1[x];
    cel2.innerHTML = list2[x];
    cel3.innerHTML = list3[x];
    cel4.innerHTML = list4[x];
    n++;
    x++;
    }
    
    function ageFunction(y){
    var db = new Date(y);  
    var diff = Date.now() - db.getTime();  
    var age_dt = new Date(diff);      
    var year = age_dt.getUTCFullYear();  
    var age = Math.abs(year - 1970);
    return age
    }
